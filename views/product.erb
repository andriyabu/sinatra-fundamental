<div class="container mt-5">
    <div>
        <% if @message %>
            <h2><%= @message %></h2>
        <% end %>
    </div>

    <form action="/product" method="POST">
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <input type="text" name="name" value="<%= @name %>"class="form-control">
            </div>
            <div class="col-auto">
                <input type="submit" value="submit" class="btn btn-primary">
            </div>
        </div>
    </form>

     <div class="row g-3 align-items-center">
        <ul>
            <% @names.each do |name| %>
              <li><%= name %></li>
            <% end %>
        </ul>
    </div>
</div>